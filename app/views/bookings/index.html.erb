<div class="container" style="min-height: 100%; height: 100%;">
  <div class="row">
  <h1><strong> Here are your bookings <%= @user.name %>!</strong></h1>
    <% if @bookings.exists? %>

      <% @bookings.each do |booking| %>
        <div class="col-12">
            <div class="notification">
            <img src='<%= booking.photographer.avatar %>' class="avatar-large col-2" />
              <div class="notification-content">
                <h2>Your booking is with <strong><%= booking.photographer.name %></strong> in <%= booking.photographer.location %>.</h2>
                  <p><strong><%= booking.date.day %>-<%= booking.date.month %>-<%= booking.date.year %></strong><strong><br/><%= booking.date.strftime("%H:%M") %></strong></p>
              </div>
              <div class="notification-actions">
                  <a href="#">Change <i class="fas fa-pencil-alt"></i></a>
                  <a href="#">Cancel <i class="far fa-trash-alt"></i></a>
              </div>
            </div>
        </div>
      <% end %>
    <% else %>
      <div class="col-12">
      <h2>You don't have any bookings.</h2>
      </div>
    <% end %>



  </div>
</div>
