<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1508672019048-805c876b67e2?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1393&q=80);">
  <div class="container d-flex align-items-center">
    <div class="row">
      <div class="card col-lg-6 col-md-12 col-sm-8 mx-5">
        <div class="card-body">
          <h5 class="card-title">Find some photographers</h5>
          <form>
            <div class="form-group">
              <label for="exampleInputEmail1">Where?</label>
              <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter the city name">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">When?</label>
              <input type="date" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Style?</label>
              <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="What style do you want?">
            </div>
            <button type="submit" class="btn btn-primary"><%= link_to 'Submit', photographers_path %></button>
          </form>
        </div>
      </div>
      <div class="banner-text col-lg-4 col-md-12 col-sm-12 my-5">
        <h1>FAUXTOGRAPHY</h1>
      </div>
    </div>
  </div>
</div>
  <div class="cards">
  <% @photographers.each do |photographer| %>
  <%= render 'photographers/card', photographer: photographer %>
  <% end %>
  </div>
</div>
