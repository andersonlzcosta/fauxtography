<div class="show-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
  url(<%= @photographer.pictures[0] %>);">
  <div class="banner-details-container">
    <h1><%= @photographer.name %></h1>
    <p><%= link_to "Go back to Fauxtographers", root_path, class: 'btn btn-primary' %>  <%= link_to "Book this Fauxtographer", new_photographer_booking_path(@photographer), class: 'btn btn-primary' %>
     </p>
  </div>
</div>

<div class="container">
  <div class="photographer-details">
    <h2><strong>Location</strong><br><%= @photographer.location %></h2>
    <h2><strong>Price</strong><br>$<%= @photographer.price_rate %> per 15 edited photos</h2>
    <h2><strong>Style</strong><br><%= @photographer.style %> </h2>

  </div>
  <div id="photo-card-container">
    <h3> Photos(<%= @photographer.pictures.count %>)</h3>
      <div class="photo-cards">

        <% @photographer.pictures.each do |picture|%>
        <%= render 'photo-card', picture: picture %>
        <% end %>
      </div>
  </div>

  <div class="booking-form-show">
    <%= render 'booking-form' %>
  </div>
</div>

<div class="container">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <h2>Flatpickr Demo</h2>

    <%= simple_form_for :search, method: "get" do |f| %>
      <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.button :submit, "Go", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>






